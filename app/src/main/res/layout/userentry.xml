<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="12dp"
    app:cardCornerRadius="16dp"
    android:layout_margin="16dp"
    android:backgroundTint="#23A15A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">>

        <TextView
            android:id="@+id/domaci"
            style="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal|bold|italic"
            android:fontFamily="sans-serif-medium"
            android:text="DoBb"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/match_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="16dp"
                android:textColor="@color/black"
                style="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" SCORE:"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/d_gol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gol 1"
                android:textSize="10dp"
                android:textColor="@color/black"
                style="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:textSize="10dp" />

            <TextView
                android:id="@+id/g_gol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="gol 1"
                android:textSize="10dp"
                android:textColor="@color/black"
                style="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" YELLOWS: "
                android:textSize="10dp" />
            <TextView
                android:id="@+id/d_ru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rumeni 1"
                android:textSize="10dp"
                android:textColor="@color/black"
                style="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textSize="10dp" />

            <TextView
                android:id="@+id/g_ru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rumeni 2"
                android:textSize="10dp"
                android:textColor="@color/black"
                style="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" REDS: "
                android:textSize="10dp" />
            <TextView
                android:id="@+id/d_rd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rdeci 1"
                android:textSize="10dp"
                android:textColor="@color/black"
                style="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:textSize="10dp" />

            <TextView
                android:id="@+id/g_rd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rdeci 2"
                android:textSize="10dp"
                android:textColor="@color/black"
                style="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" SHOTS: "
                android:textSize="10dp" />
            <TextView
                android:id="@+id/d_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D Strel 1"
                android:textSize="10dp"
                android:textColor="@color/black"
                style="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/g_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="G Strel 2"
                android:textSize="10dp"
                android:textColor="@color/black"
                style="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" P: "
                android:textSize="10dp" />
            <TextView
                android:id="@+id/d_p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P 1"
                android:textSize="10dp"
                android:textColor="@color/black"
                style="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textSize="10dp" />
            <TextView
                android:id="@+id/g_p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P 2"
                android:textSize="10dp"
                android:textColor="@color/black"
                style="bold"
                />


        </LinearLayout>

        <TextView
            android:id="@+id/gosti"
            style="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal|bold|italic"
            android:fontFamily="sans-serif-medium"
            android:text="MoravÄe"
            android:textColor="@color/black"
            android:textSize="14dp" />
    </LinearLayout>




</androidx.cardview.widget.CardView>